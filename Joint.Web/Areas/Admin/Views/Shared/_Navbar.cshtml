@{
    Layout = null;
}
@using Joint.Web.Framework
<div class="navbar navbar-default" id="navbar">
    <script type="text/javascript">
        try { ace.settings.check('navbar', 'fixed') } catch (e) { }
    </script>
    <div class="navbar-container" id="navbar-container">
        <div class="navbar-header pull-left">
            <a href="@InitInfo.Instance.HomeUrl" class="navbar-brand">
                <strong>
                    <small>
                        <i class="icon-leaf"></i>
                        @if (Request.Url.Host == "lht.qdchepu.cn")
                        {
                            <font>莱哥西妹</font>
                        }
                        else if (!string.IsNullOrEmpty(InitInfo.Instance.CurrentShop.SiteName))
                        {
                            <font>@InitInfo.Instance.CurrentShop.SiteName</font>
                        }
                        else if ((int)InitInfo.Instance.GetCurrentShopType() == 1)
                        {
                            <font>B4管理系统</font>
                        }
                        else
                        {
                            <font>B4管理系统</font>
                        }

                    </small>
                </strong>
            </a><!-- /.brand -->
        </div><!-- /.navbar-header -->

        <div id="booNavigation" class="navbar-header booNavigation" style="min-width:300px;">

        </div>

        <div class="navbar-header pull-right" role="navigation">
            <ul class="nav ace-nav">
                @* 原来的颜色 grey 气泡颜色badge-grey *@
                <li class="green">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <i class="icon-tasks"></i>
                        <span class="badge  badge-success">门店</span>
                    </a>

                    <ul class="pull-right dropdown-navbar dropdown-menu dropdown-caret dropdown-close">
                        <li class="dropdown-header">
                            <i class="icon-ok"></i>
                            可切换的门店
                        </li>
                        @{var allStore = InitInfo.Instance.AllStore as List<Joint.Entity.Stores>;}
                        @foreach (var item in allStore)
                        {
                            bool isCurrentStore = InitInfo.Instance.CurrentStore.ID == item.ID;
                            <li>
                                <a href="#" onclick="@(isCurrentStore ? "javascript:void(0);" : "switchCurrentStore(" + item.ID + ");")">
                                    <div class="clearfix">
                                        <span class="pull-left">
                                            <i class="btn btn-xs no-hover btn-success icon-home"></i>
                                            @item.StoreName
                                        </span>
                                        @if (isCurrentStore)
                                        {
                                            <span class="pull-right badge badge-success"><i class="icon-ok"></i></span>
                                        }
                                    </div>
                                </a>
                            </li>
                        }
                        <li style="display:none;">
                            <a href="#">
                                查看所有通知
                                <i class="icon-arrow-right"></i>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="purple" style="display:none;">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <i class="icon-bell-alt icon-animated-bell"></i>
                        <span class="badge badge-important">8</span>
                    </a>

                    <ul class="pull-right dropdown-navbar navbar-pink dropdown-menu dropdown-caret dropdown-close">
                        <li class="dropdown-header">
                            <i class="icon-warning-sign"></i>
                            8条通知
                        </li>

                        <li>
                            <a href="#">
                                <div class="clearfix">
                                    <span class="pull-left">
                                        <i class="btn btn-xs no-hover btn-pink icon-comment"></i>
                                        新闻评论
                                    </span>
                                    <span class="pull-right badge badge-info">+12</span>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                <i class="btn btn-xs btn-primary icon-user"></i>
                                切换为编辑登录..
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                <div class="clearfix">
                                    <span class="pull-left">
                                        <i class="btn btn-xs no-hover btn-success icon-shopping-cart"></i>
                                        新订单
                                    </span>
                                    <span class="pull-right badge badge-success">+8</span>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                <div class="clearfix">
                                    <span class="pull-left">
                                        <i class="btn btn-xs no-hover btn-info icon-twitter"></i>
                                        粉丝
                                    </span>
                                    <span class="pull-right badge badge-info">+11</span>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                查看所有通知
                                <i class="icon-arrow-right"></i>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="green" style="display:none;">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <i class="icon-envelope icon-animated-vertical"></i>
                        <span class="badge badge-success">5</span>
                    </a>

                    <ul class="pull-right dropdown-navbar dropdown-menu dropdown-caret dropdown-close">
                        <li class="dropdown-header">
                            <i class="icon-envelope-alt"></i>
                            5条消息
                        </li>

                        <li>
                            <a href="#">
                                <img src="/Areas/Admin/Content/assets/avatars/avatar.png" class="msg-photo" alt="Alex's Avatar">
                                <span class="msg-body">
                                    <span class="msg-title">
                                        <span class="blue">Alex:</span>
                                        不知道写啥 ...
                                    </span>

                                    <span class="msg-time">
                                        <i class="icon-time"></i>
                                        <span>1分钟以前</span>
                                    </span>
                                </span>
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                <img src="/Areas/Admin/Content/assets/avatars/avatar3.png" class="msg-photo" alt="Susan's Avatar">
                                <span class="msg-body">
                                    <span class="msg-title">
                                        <span class="blue">Susan:</span>
                                        不知道翻译...
                                    </span>

                                    <span class="msg-time">
                                        <i class="icon-time"></i>
                                        <span>20分钟以前</span>
                                    </span>
                                </span>
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                <img src="/Areas/Admin/Content/assets/avatars/avatar4.png" class="msg-photo" alt="Bob's Avatar">
                                <span class="msg-body">
                                    <span class="msg-title">
                                        <span class="blue">Bob:</span>
                                        到底是不是英文 ...
                                    </span>

                                    <span class="msg-time">
                                        <i class="icon-time"></i>
                                        <span>下午3:15</span>
                                    </span>
                                </span>
                            </a>
                        </li>

                        <li>
                            <a href="inbox.html">
                                查看所有消息
                                <i class="icon-arrow-right"></i>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="light-blue">
                    <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                        @if (!string.IsNullOrWhiteSpace(InitInfo.Instance.CurrentUser.Photo))
                        {
                            <img class="nav-user-photo" style="width:40px;height:40px;" src="@InitInfo.Instance.CurrentUser.Photo" alt="@(InitInfo.Instance.CurrentUser.RealName)的照片">
                        }
                        else
                        {
                            <img class="nav-user-photo" style="width:40px;height:40px;" src="/Areas/Admin/Content/assets/avatars/user.jpg" alt="@(InitInfo.Instance.CurrentUser.RealName)的照片">
                        }
                        <span class="user-info">
                            <small>@InitInfo.Instance.CurrentRoleName</small>
                            <small style="padding-top:3px;">@InitInfo.Instance.CurrentUser.RealName</small>
                        </span>

                        <i class="icon-caret-down"></i>
                    </a>

                    <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                        <li style="display:none;">
                            <a href="#">
                                <i class="icon-cog"></i>
                                设置
                            </a>
                        </li>

                        <li class="divider"></li>
                        <li>
                            <a href="javascript:void(0)" onclick="javascript: layer.alert('当前商户号：@("61"+InitInfo.Instance.CurrentShop.ID.ToString().PadLeft(4,'0'))')">
                                <i class="icon-user"></i>
                                商户号
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("ModifyPassword", "Home")">
                                <i class="icon-key"></i>
                                修改密码
                            </a>
                        </li>
                        @if ((ViewBag.IsWeiXinOrMoblie != null && ViewBag.IsWeiXinOrMoblie) || InitInfo.Instance.UserSelectVersion == 1)
                        {
                            <li class="divider"></li>
                            <li>
                                <a href="/Admin/Home/JumpMobileVersion">
                                    <i class="icon-mobile-phone icon-large"></i>
                                    切换手机版
                                </a>
                            </li>
                        }


                        <li class="divider"></li>

                        <li>
                            <a href="@Url.Action("Logout","Home")">
                                <i class="icon-off"></i>
                                退出
                            </a>
                        </li>
                    </ul>
                </li>
            </ul><!-- /.ace-nav -->
        </div><!-- /.navbar-header -->
    </div><!-- /.container -->
</div>