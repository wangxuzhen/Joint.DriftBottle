@using Joint.Web.Areas.Admin.Models;
@using Joint.Entity
@model PageModel<UserListModel>

<div class="row">
    <div class="col-xs-12">

        <div class="row">
            <div>
                <span style="float:left">
                    <button type="button" class="btn btn-sm btn-info" style="margin-left: 12px;" onclick="showAddUser();">
                        <i class="icon-plus"></i>
                        添加
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" onclick="deleteAll();">
                        <i class="icon-remove"></i>
                        批量禁用
                    </button>
                    <button type="button" class="btn btn-sm btn-warning" onclick="assignRolesSome();">
                        <i class="icon-user"></i>
                        批量分配角色
                    </button>
                </span>
                @{
                    var searchModel = ViewBag.SearchModel as OneKeySearchModel;
                    if (searchModel == null)
                    {
                        searchModel = new OneKeySearchModel();
                    }
                }

                <div class="col-xs-8 col-sm-3" style="float:right;">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control search-query" name="SearchStr" placeholder="输入查询内容" value="@searchModel.SearchStr" />
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-purple btn-sm">
                                    查询
                                    <i class="icon-search icon-on-right bigger-110"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="hr hr-18 dotted hr-double"></div>

        <!-- PAGE CONTENT BEGINS -->
        <div class="row">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <input type="hidden" id="userIDs" value="" />
                    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="center">
                                    <label>
                                        <input type="checkbox" class="ace" onclick="checkAll(this);">
                                        <span class="lbl"></span>
                                    </label>
                                </th>
                                <th class="hidden-480">部门</th>
                                <th>姓名</th>
                                <th>手机</th>
                                <th class="hidden-480">工号</th>
                                @*<th class="hidden-480">工种</th>
                                    <th>底薪</th>
                                    <th class="hidden-480">微信</th>*@
                                <th>账号</th>
                                <th class="hidden-480">身份证</th>

                                <th class="hidden-480">
                                    <i class="icon-time bigger-110 hidden-480"></i>
                                    添加时间
                                </th>
                                <th>操作</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model.Models)
                            {
                                <tr>
                                    <td class="center">
                                        <label>
                                            <input data-id="@item.ID" type="checkbox" class="ace cbSingleData">
                                            <span class="lbl"></span>
                                        </label>
                                    </td>

                                    <td class="hidden-480">@item.StoreName</td>
                                    <td>@item.RealName</td>
                                    <td>@item.Phone</td>
                                    <td class="hidden-480">@item.WorkNum</td>
                                    @*<td class="hidden-480">@item.RoleName</td>
                                        <td>@item.BasicSalary</td>
                                        <td class="hidden-480">@item.WeiXinVisible</td>*@
                                    <td>@item.UserName</td>
                                    <td class="hidden-480">@item.Idcard</td>
                                    <td class="hidden-480">@item.CreateTime.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                                            @*<button data-id="@item.ID" class="btn btn-xs btn-success" onclick="viewData(this);">
                                                    <i class="icon-zoom-in bigger-120"></i>
                                                </button>*@

                                            <button data-id="@item.ID" class="btn btn-xs btn-info" onclick="viewData(this);">
                                                <i class="icon-edit bigger-120"></i>
                                                编辑
                                            </button>
                                            @if (item.Disabled == true)
                                            {
                                                <button data-id="@item.ID" class="btn btn-xs btn-success" onclick="reDeleteUser(this);">
                                                    <i class="icon-ok bigger-120"></i>
                                                    启用
                                                </button>
                                            }
                                            else
                                            {
                                                <button data-id="@item.ID" class="btn btn-xs btn-danger" onclick="deleteUser(this);">
                                                    <i class="icon-remove bigger-120"></i>
                                                    禁用
                                                </button>
                                            }


                                            <button data-id="@item.ID" class="btn btn-xs btn-warning" onclick="assignRoles(this);">
                                                <i class="icon-user bigger-120"></i>角色
                                            </button>

                                            @*<button data-id="@item.ID" class="btn btn-xs btn-purple" onclick="ShowPrivileges(this, 'UserShow');">
                                                    <i class="icon-check bigger-120"></i>
                                                    权限
                                                </button>
                                                <button data-id="@item.ID" class="btn btn-xs btn-pink" onclick="EditEmpInfo('@item.ID');">
                                                    <i class="icon-check bigger-120"></i>
                                                    微信员工介绍
                                                </button>*@

                                        </div>

                                        <div class="visible-xs visible-sm hidden-md hidden-lg">
                                            <div class="inline position-relative">
                                                <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
                                                    <i class="icon-cog icon-only bigger-110"></i>
                                                </button>

                                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                                    @*<li>
                                                            <a href="#" data-id="@item.ID" class="tooltip-info" data-rel="tooltip" title="" data-original-title="View" onclick="viewData(this);">
                                                                <span class="blue">
                                                                    <i class="icon-zoom-in bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>*@

                                                    <li>
                                                        <a href="#" data-id="@item.ID" class="tooltip-success" data-rel="tooltip" title="" data-original-title="Edit" onclick="viewData(this);">
                                                            <span class="blue">
                                                                <i class="icon-edit bigger-120"></i>编辑
                                                            </span>
                                                        </a>
                                                    </li>
                                                    @if (item.Disabled == true)
                                                    {
                                                        <li>
                                                            <a href="#" data-id="@item.ID" class="tooltip-error" data-rel="tooltip" title="" data-original-title="Delete" onclick="reDeleteUser(this);">
                                                                <span class="green">
                                                                    <i class="icon-ok bigger-120"></i>启用
                                                                </span>
                                                            </a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <a href="#" data-id="@item.ID" class="tooltip-error" data-rel="tooltip" title="" data-original-title="Delete" onclick="deleteUser(this);">
                                                                <span class="red">
                                                                    <i class="icon-remove bigger-120"></i>禁用
                                                                </span>
                                                            </a>
                                                        </li>
                                                    }

                                                    <li>
                                                        <a href="#" data-id="@item.ID" class="tooltip-error" data-rel="tooltip" title="" data-original-title="Delete" onclick="">
                                                            <span class="orange">
                                                                <i class="icon-user bigger-120"></i>角色
                                                            </span>
                                                        </a>
                                                    </li>

                                                    @*<li>
                                                            <a href="#" data-id="@item.ID" class="tooltip-purple" data-rel="tooltip" title="" data-original-title="Edit" onclick="ShowPrivileges(this, 'UserShow');">
                                                                <span class="purple">
                                                                    <i class="icon-check bigger-120"></i>权限
                                                                </span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#" data-id="@item.ID" class="tooltip-purple" data-rel="tooltip" title="" data-original-title="Edit" onclick="EditEmpInfo('@item.ID');">
                                                                <span class="pink">
                                                                    <i class="icon-edit bigger-120"></i>微信员工介绍
                                                                </span>
                                                            </a>
                                                        </li>*@
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div><!-- /.table-responsive -->

                <div class="text-center">
                    @Html.PageLinks(Model.pagingInfo, pageIndex => Url.Action("CusUserManage", "User", new { PageIndex = pageIndex }), searchModel)
                </div>
            </div><!-- /span -->
        </div><!-- /row -->
    </div><!-- /.col -->
</div><!-- /.row -->
@section FootScript{
    <script type="text/javascript">


        function showAddUser() {
            location.href = "/Admin/User/ShowAddUser";
        }

        function checkAll(obj) {
            var isChecked = $(obj).prop("checked");
            $(".cbSingleData").prop("checked", isChecked);
        }

        function deleteAll() {
            var checkCount = $(".cbSingleData:checked").length;
            if (checkCount == 0) {
                layer.msg("请选择要禁用的数据");
                return;
            }

            layer.confirm('你确定要禁用勾选的数据么？', {
                btn: ['确定', '取消'] //按钮
            }, function () {
                var strIDs = "";
                $(".cbSingleData:checked").each(function () {
                    strIDs += "," + $(this).attr("data-id");
                });

                var loading = layer.load(1, {
                    shade: [0.1, '#fff'] //0.1透明度的白色背景
                });

                $.post('/Admin/User/DeleteUsers',
               { IDs: strIDs },
               function (result) {
                   layer.close(loading);

                   if (result.success) {
                       location.reload();
                   }
                   else {
                       layer.msg(result.msg);
                   }
               },
               "json"
               );

            }, function () {
                layer.msg('已取消', { icon: 1, time: 1000 });
            });
        }

        function viewData(obj) {
            location.href = "/Admin/User/ShowAddUser?ID=" + $(obj).attr('data-id');
        }

        function deleteUser(obj) {
            layer.confirm('你确定要禁用此数据么？', {
                btn: ['确定', '取消'] //按钮
            }, function () {

                var loading = layer.load(1, {
                    shade: [0.1, '#fff'] //0.1透明度的白色背景
                });

                $.post('/Admin/User/DeleteUser',
               { ID: $(obj).attr('data-id') },
               function (result) {
                   layer.close(loading);

                   if (result.success) {
                       location.reload();
                   }
                   else {
                       layer.msg(result.msg);
                   }
               },
               "json"
               );

            }, function () {
                layer.msg('已取消', { icon: 1, time: 1000 });
            });
        }

        function reDeleteUser(obj) {
            layer.confirm('你确定要启用此数据么？', {
                btn: ['确定', '取消'] //按钮
            }, function () {

                var loading = layer.load(1, {
                    shade: [0.1, '#fff'] //0.1透明度的白色背景
                });

                $.post('/Admin/User/ReDeleteUser',
               { ID: $(obj).attr('data-id') },
               function (result) {
                   layer.close(loading);

                   if (result.success) {
                       location.reload();
                   }
                   else {
                       layer.msg(result.msg);
                   }
               },
               "json"
               );

            }, function () {
                layer.msg('已取消', { icon: 1, time: 1000 });
            });
        }


        function ShowPrivileges(obj, PType) {
            var id = $(obj).attr("data-id");

            //iframe层-父子操作
            var openIndex = layer.open({
                type: 2,
                area: ['800px', '600px'],
                fix: false, //不固定
                maxmin: true,
                title: "权限分配",
                content: $.format('/Admin/Module/ShowPrivileges?PType={0}&ID={1}', PType, id)
            });
        }
        function EditEmpInfo(id) {
            window.location.href = "/Admin/User/EditEmpInfo/"+id
         //    window.location.href = "/Admin/Stores/EditProfile?storeID=" + id;
        }
            function assignRoles(obj) {
                $("#userIDs").val($(obj).attr("data-id"));
                selectRole();
            }

            function assignRolesSome() {
                var strIDs = "";
                $(".cbSingleData:checked").each(function () {
                    strIDs += "," + $(this).attr("data-id");
                });

                if (strIDs == "") {
                    layer.msg("请勾选用户");
                    return;
                }
                //设置隐藏域，给弹窗获取
                $("#userIDs").val(strIDs);

                selectRole();
            }

            function selectRole() {
                //iframe层-父子操作
                var openIndex = layer.open({
                    type: 2,
                    area: ['380px', '350px'],
                    fix: false, //不固定
                    maxmin: true,
                    title: "角色分配",
                    content: '/Admin/Permission/GetRolesByStoreID'
                });
            }



    </script>
}

