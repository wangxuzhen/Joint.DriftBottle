        function goBack() {
           
            try{
                if(PageGoBack && typeof(PageGoBack)=="function"){ 
                    PageGoBack(); 
                }else{ 
                    history.go(-1);
                } 
                return;
            }
            catch (e) {

            }
            history.go(-1);
        }

