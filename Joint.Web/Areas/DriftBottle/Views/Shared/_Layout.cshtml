        function CheckPcOrMoblie(pcObj,mobileObj){

            if(isWeiXinOrMoblie){
                return mobileObj;
            }
            else{
                return pcObj;
            }
        }

        function AdminHeartbeat() {
            $.post('/Admin/SystemTool/AdminHeartbeat', {},
                function (result) {
                    if (result.success) {

                    }
                    else {

                        layer.msg(result.msg);
                    }
                },
                "json"
            );
        }


        function _stopIt(e) {
            if (e.returnValue) {
                e.returnValue = false;
            }
            if (e.preventDefault) {
                e.preventDefault();
            }

            return false;
        }

        $(function(){
            //心跳
            var interval = setInterval(AdminHeartbeat, 1000 * 60);//1000 * 60 * 20
        });
