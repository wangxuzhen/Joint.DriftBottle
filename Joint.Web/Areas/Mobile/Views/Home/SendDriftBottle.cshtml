@section FootScript{
    @*页尾脚本位置*@
    <script type="text/javascript">
        var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
        function PageGoBack() {
            if (index) {
                parent.layer.close(index);
            }
            else {
                history.go(-1);
            }

        }

        function addDriftBottle() {
            var bottleJson = $("#massageForm").serializeJson();
            //userJson.WeiXinVisible = $("#WeiXinVisible").is(":Checked");

            bottleJson.Massage = $("#Massage").val();

            var loading = layer.load(1, {
                shade: [0.1, '#fff'] //0.1透明度的白色背景
            });

            $.post('/Mobile/Home/AddDriftBottle',
            bottleJson,
            function (result) {

                if (result.success) {
                    layer.msg("瓶子已抛向大海...");
                    $("#Massage").val("");

                    $("html,body").animate({
                        scrollTop: 0
                    }, 500);
                    //layer.msg('已抛向大海...', { icon: 1, time: 3000 });
                }
                else {
                    layer.msg(result.msg);
                    $("html,body").animate({
                        scrollTop: 0
                    }, 500);
                    //layer.msg('已抛向大海...', { icon: 1, time: 3000 });
                }
                layer.close(loading);
            },
            "json"
            );
        }

    </script>
}